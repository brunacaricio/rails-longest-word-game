<div class="container mt-4">

  <h1>Result</h1>

  <% if @included %>
    <% if @english_word %>
      <p class="mt-4"><strong>Congratulations!</strong> <%= @word %> is a valid English word!</p>
    <% else %>
      <p class="mt-4">Sorry but <strong><%= @word %></strong> does not seem to be a valid English word...</p>
    <% end %>
  <% else %>
    <p class="mt-4">Sorry but <strong><%= @word %></strong> can't be built out of <%= @letters.join(", ") %></p>
  <% end %>

  <%= link_to "Play again", new_path, class: "btn btn-primary" %>

</div>
